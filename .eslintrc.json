{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true
    },
    "extends": [ "prettier"],
    "overrides": [
        {
        "files": ["src/*.js"],   
        "rules": {
            "ignoreNonDeclaration": 1
          }
        }
    ],
    "parserOptions": {
        "ecmaVersion": "latest"
    },
    "rules": {
        "prettier/prettier": ["error"]
    },
    "plugins": ["prettier"]
  
}
